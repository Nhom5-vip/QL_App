<Page x:Class="WpfApp5.presentation.views.AddNewUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5.presentation.views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddNewUser">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Add New User" FontSize="20" FontWeight="Bold" Margin="0 0 0 10" Height="154" Width="579"/>


            <TextBlock Text="Enter ID" Width="201"/>
            <TextBox x:Name="txtID" Width="200" Margin="5"/>

            <TextBlock Text="Enter Name" Width="201"/>
            <TextBox x:Name="txtName" Width="200" Margin="5"/>

            <TextBlock Text="Enter Gender" Width="201"/>
            <ComboBox x:Name="cmbGender" Width="200" Margin="5">
                <ComboBoxItem Content="Nam"/>
                <ComboBoxItem Content="Nữ"/>
            </ComboBox>

            <TextBlock Text="Enter Telephone" Width="201"/>
            <TextBox x:Name="txtTelephone" Width="200" Margin="5"/>

            <TextBlock Text="Enter Role" Width="201"/>
            <TextBox x:Name="txtRole" Width="200" Margin="5"/>
            
            <Button Content="Save" Click="SaveButton_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
